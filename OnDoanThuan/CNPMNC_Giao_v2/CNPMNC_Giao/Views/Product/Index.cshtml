@model List<CNPMNC_Giao.Models.SanPham>
@{
    ViewBag.Title = "Index";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Tất cả sản phẩm</h1>

    @foreach (var item in Model)
    {
        <div class="col-sm-4">
            <div class="product-image-wrapper">
                <div class="single-products">
                    <div class="productinfo text-center">
                        <img src="~/images/@item.AnhSP" alt="@item.TenSanPham" style="width: 250px; height: 250px;" />
                        <h2>@item.GiaTienMoi VND</h2>
                        <p>@item.TenSanPham</p>
                        <a href="#" class="btn btn-default add-to-cart"><img src="~/images/AddCart.jpg" style="width: 20px; padding: 2px; margin-right: 2px;">Thêm vào giỏ hàng</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>