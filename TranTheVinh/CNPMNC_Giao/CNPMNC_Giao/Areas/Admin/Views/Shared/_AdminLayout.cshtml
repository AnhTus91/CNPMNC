<body>
    <style>
        /* General Sidebar Styles */
        #sidebar {
            background: #ffffff; /* White background */
            color: #2c3e50; /* Dark blue-gray text */
            min-width: 250px; /* Fixed width */
            padding: 20px; /* Padding for sidebar */
            box-shadow: 2px 0 10px rgba(0, 0, 0, 0.3); /* Subtle shadow */
        }

        /* Logo Header Styles */
        .logo-header {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-bottom: 20px; /* Space below logo */
        }

            .logo-header .logo {
                max-width: 80%; /* Responsive logo size */
                border-radius: 8px; /* Rounded corners */
            }

        .logo-title {
            font-size: 24px; /* Larger font for title */
            font-weight: 600; /* Bold text */
            color: #2c3e50; /* Title color */
            text-decoration: none; /* No underline */
            margin-top: 10px; /* Space above title */
            text-align: center; /* Centered title */
        }

        /* Menu List Styles */
        .components {
            padding-left: 0; /* Remove default padding */
        }

            .components li {
                list-style: none; /* Remove bullet points */
                margin-bottom: 15px; /* Space between items */
            }

            .components a {
                color: #2c3e50; /* Dark text color for links */
                padding: 10px 15px; /* Padding for links */
                display: block; /* Block display */
                text-decoration: none; /* No underline */
                border-radius: 5px; /* Rounded corners */
                transition: background 0.3s, color 0.3s; /* Smooth transition for hover */
            }

                .components a:hover {
                    background: #3498db; /* Bright blue on hover */
                    color: #ffffff; /* White text on hover */
                }

            /* Active Link Styles */
            .components li.active a {
                background: #2980b9; /* Darker blue for active link */
                color: #ffffff; /* White text for active link */
            }


        //=====================================//
        /* General Content Styles */
        .content {
            padding: 20px; /* Padding for the content */
        }

        /* Header Top Styles */
        .content-top {
            display: flex; /* Flex layout for header */
            justify-content: space-between; /* Space between left and right */
            align-items: center; /* Center vertically */
            margin-bottom: 20px; /* Space below header */
            background-color: #f8f9fa; /* Light background color */
            padding: 15px; /* Padding for header */
            border-radius: 8px; /* Rounded corners */
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); /* Subtle shadow */
        }

        /* User Greeting Styles */
        .hello-user {
            font-size: 26px; /* Larger font size for greeting */
            font-weight: 700; /* Bold text */
            color: #2c3e50; /* Dark text color */
        }

        /* Real-time Clock Styles */
        .real-time {
            display: flex; /* Flex layout */
            align-items: center; /* Center items */
        }

        .clock {
            font-size: 22px; /* Font size for clock */
            margin-right: 15px; /* Space to the right of clock */
            color: #e67e22; /* Orange color for clock */
            font-weight: 600; /* Slightly bold */
        }

        /* User Icon Styles */
        .icon-user {
            display: flex; /* Flex layout */
            align-items: center; /* Center vertically */
            position: relative; /* For dropdown positioning */
            cursor: pointer; /* Cursor change on hover */
        }

            /* User Icon Image Styles */
            .icon-user img {
                width: 45px; /* Fixed size for user icon */
                height: 45px; /* Maintain aspect ratio */
                border-radius: 50%; /* Circular icon */
                border: 2px solid #3498db; /* Border around user icon */
            }

        /* User Name Styles */
        .icon-user-fullname {
            margin-left: 10px; /* Space between icon and name */
            font-weight: 600; /* Bold for prominence */
            color: #34495e; /* Darker text color */
        }

        /* Dropdown Styles */
        .icon-user-dropdown {
            display: none; /* Initially hidden */
            position: absolute; /* Absolute positioning */
            right: 0; /* Align to the right */
            background: #ffffff; /* White background */
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15); /* Shadow effect */
            border-radius: 5px; /* Rounded corners */
            margin-top: 10px; /* Space above dropdown */
            z-index: 1000; /* Above other elements */
        }

        /* Show dropdown on hover */
        .icon-user:hover .icon-user-dropdown {
            display: block; /* Show on hover */
        }

        /* Dropdown Item Styles */
        .user-logout {
            padding: 12px 20px; /* Padding for logout item */
            color: #34495e; /* Dark text color */
            transition: background 0.3s, color 0.3s; /* Smooth background and text color transition */
            border-bottom: 1px solid #eaeaea; /* Divider line */
        }

            /* Last item without border */
            .user-logout:last-child {
                border-bottom: none; /* Remove border from last item */
            }

            /* Dropdown Item Hover Effect */
            .user-logout:hover {
                background: #3498db; /* Blue background on hover */
                color: #ffffff; /* White text on hover */
            }

        /* Triangle Icon Styles */
        .box-triangle {
            display: inline-block; /* Inline display for triangle */
            margin-left: 5px; /* Space to the left of triangle */
        }




        .hello-user {
            font-size: 1.5rem; /* Kích thước chữ tiêu đề */
            font-weight: bold; /* Chữ đậm */
            color: #343a40; /* Màu chữ tối */
            margin: 0; /* Bỏ margin mặc định */
        }

        .real-time {
            display: flex;
            flex-direction: column;
            align-items: center;
            background-color: #ffffff; /* Màu nền trắng */
            border-radius: 10px; /* Bo góc */
            padding: 2px; /* Padding xung quanh */
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2); /* Đổ bóng */
            width: 400px; /* Chiều rộng cố định */
        }

        .clock {
            font-size: 2rem; /* Kích thước chữ lớn */
            font-weight: bold; /* Chữ đậm */
            color: #333333; /* Màu chữ tối */
            margin-bottom: 5px; /* Khoảng cách dưới */
            text-align: center; /* Căn giữa chữ */
        }

        .date {
            font-size: 0.9rem; /* Kích thước chữ nhỏ hơn */
            color: #888888; /* Màu chữ nhạt hơn */
            text-align: center; /* Căn giữa chữ */
        }
    </style>

    <script>
        function showTime() {
            const date = new Date(); // Lấy thời gian hiện tại
            let hours = date.getHours(); // Lấy giờ
            let minutes = date.getMinutes(); // Lấy phút
            let seconds = date.getSeconds(); // Lấy giây

            // Đảm bảo rằng giờ, phút và giây luôn có 2 chữ số
            hours = (hours < 10 ? "0" : "") + hours;
            minutes = (minutes < 10 ? "0" : "") + minutes;
            seconds = (seconds < 10 ? "0" : "") + seconds;

            // Hiển thị thời gian trên trang
            document.getElementById("MyClockDisplay").innerHTML = hours + ":" + minutes + ":" + seconds;

            // Gọi hàm mỗi giây để cập nhật thời gian
            setTimeout(showTime, 1000);
        }

        // Khởi động hàm khi tải trang
        window.onload = showTime;
    </script>


