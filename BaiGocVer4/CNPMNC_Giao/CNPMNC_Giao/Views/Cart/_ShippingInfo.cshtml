@model CNPMNC_Giao.Models.NguoiDung // Thay đổi namespace theo dự án của bạn

<div id="defaultInfo">
    <h4>Thông tin giao hàng</h4>
    <p><strong>Tên người nhận:</strong> @Model.TenNguoiNhan</p>
    <p><strong>Địa chỉ người nhận:</strong> @Model.DiaChiNguoiNhan</p>
    <p><strong>Số điện thoại:</strong> @Model.SDTNguoiNhan</p>

    <!-- Nút chọn thay đổi địa chỉ giao hàng -->
    <button id="changeAddressBtn" type="button" class="btn btn-primary">Chọn địa chỉ giao hàng khác</button>
</div>

<form id="shippingForm" action="@Url.Action("ConfirmOrder", "Cart")" method="post" style="display:none;">
    <div class="form-group">
        <label for="TenNguoiNhan">Tên người nhận:</label>
        <input type="text" id="TenNguoiNhan" name="TenNguoiNhan" class="form-control" value="@Model.TenNguoiNhan" required>
    </div>
    <div class="form-group">
        <label for="DiaChiNguoiNhan">Địa chỉ người nhận:</label>
        <input type="text" id="DiaChiNguoiNhan" name="DiaChiNguoiNhan" class="form-control" value="@Model.DiaChiNguoiNhan" required>
    </div>
    <div class="form-group">
        <label for="SDTNguoiNhan">Số điện thoại người nhận:</label>
        <input type="text" id="SDTNguoiNhan" name="SDTNguoiNhan" class="form-control" value="@Model.SDTNguoiNhan" required>
    </div>
    <div class="form-group">
        <label for="paymentMethod">Chọn phương thức thanh toán:</label>
        <select name="paymentMethod" id="paymentMethod" class="form-control">
            @foreach (var method in ViewBag.PaymentMethods as List<string>)
            {
                <option value="@method">@method</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-success">Xác nhận thanh toán</button>
</form>

<script>
    $(document).ready(function () {
        // Khi bấm nút chọn địa chỉ giao hàng khác
        $("#changeAddressBtn").click(function () {
            // Ẩn thông tin mặc định và hiện form điền thông tin
            $("#defaultInfo").hide();
            $("#shippingForm").show();
        });
    });
</script>
