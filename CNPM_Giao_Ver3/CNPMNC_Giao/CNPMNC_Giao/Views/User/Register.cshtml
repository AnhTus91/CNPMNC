@model CNPMNC_Giao.Models.TaiKhoan
@{
    ViewBag.Title = "Register";
    Layout = null;
}
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" />
<div class="row justify-content-md-center">
    <div class="col-md-4">
        @using (Html.BeginForm("Register", "User", FormMethod.Post))
        {
            @Html.ValidationSummary()
            @Html.AntiForgeryToken()

            <div class="card">
                <div class="card-header">
                    <div class="card-title">Đăng ký tài khoản</div>
                </div>
                <div class="card-body">
                    @*<div class="form-group">
                        @Html.LabelFor(m => m.TenNguoiDung)
                        @Html.TextBoxFor(m => m.TenNguoiDung, "", new { @class = "form-control", @placeholder = "Họ và tên" })
                        @Html.ValidationMessageFor(m => m.TenNguoiDung, "", new { @class = "badge badge-danger" })
                    </div>*@
                    <div class="form-group">
                        @Html.LabelFor(m => m.@*TaiKhoan.*@Email)
                        @Html.TextBoxFor(m => m.@*TaiKhoan.*@Email, "", new { @class = "form-control", @placeholder = "Email dùng đăng nhập" })
                        @Html.ValidationMessageFor(m => m.@*TaiKhoan.*@Email, "", new { @class = "badge badge-danger" })
                        @if (ViewBag.error != null)
                        {
                            <span class="badge badge-danger">@ViewBag.error</span>
                        }
                    </div>

                    @*<div class="form-group">
                        @Html.LabelFor(m => m.SDT)
                        @Html.TextBoxFor(m => m.SDT, "", new { @class = "form-control", @placeholder = "Số điện thoại" })
                        @Html.ValidationMessageFor(m => m.SDT, "", new { @class = "badge badge-danger" })

                    </div>*@
                    <div class="form-group">
                        @Html.LabelFor(m => m.@*TaiKhoan.*@MatKhau)
                        @Html.PasswordFor(m => m@*.TaiKhoan*@.MatKhau, new { @class = "form-control", @placeholder = "Mật khẩu" })
                        @Html.ValidationMessageFor(m => m.@*TaiKhoan.*@MatKhau, "", new { @class = "badge badge-danger" })
                    </div>
                    <div class="form-group">

                        <input class="d-none" value="1" name="roleID" />

                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-success">Đăng ký</button>
                    </div>
                    <label class="col-12 text-center">Đã có tài khoản? </label>
                    <div class="form-group">
                        <a role="button" href="/user/login" class="btn btn-info">Đăng nhập</a>
                    </div>
                </div>
            </div>

        }
    </div>
</div>
