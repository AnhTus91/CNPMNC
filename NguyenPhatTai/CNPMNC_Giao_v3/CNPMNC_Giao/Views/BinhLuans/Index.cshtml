@model IEnumerable<CNPMNC_Giao.Models.BinhLuan>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                <a href="~/Views/BinhLuans/Index.cshtml">~/Views/BinhLuans/Index.cshtml</a>
                @Html.DisplayNameFor(model => model.NoiDung)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NgayBinhLuan)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NguoiDung.TenNguoiDung)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SanPham.TenSanPham)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NoiDung)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayBinhLuan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NguoiDung.TenNguoiDung)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SanPham.TenSanPham)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.MaBinhLuan }) |
                @Html.ActionLink("Details", "Details", new { id=item.MaBinhLuan }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.MaBinhLuan })
            </td>
        </tr>
    }
    </table>
</body>
</html>
<style>
    /* Căn chỉnh và tạo nền chung cho toàn bộ trang */
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f9;
        margin: 0;
        padding: 20px;
    }

    /* Liên kết "Create New" có phong cách như một nút */
    p a {
        display: inline-block;
        padding: 10px 20px;
        margin-bottom: 20px;
        background-color: #007bff;
        color: #fff;
        text-decoration: none;
        border-radius: 5px;
        font-weight: bold;
    }

        p a:hover {
            background-color: #0056b3;
        }

    /* Định dạng bảng */
    .table {
        width: 100%;
        max-width: 1000px;
        border-collapse: collapse;
        margin: 0 auto;
        background-color: #fff;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

        /* Phong cách tiêu đề cột của bảng */
        .table th {
            background-color: #007bff;
            color: #fff;
            padding: 12px 15px;
            text-align: left;
            font-size: 16px;
            font-weight: bold;
        }

        /* Phong cách ô trong bảng */
        .table td {
            padding: 12px 15px;
            border-bottom: 1px solid #ddd;
            color: #333;
        }

        /* Hiệu ứng khi di chuột qua hàng */
        .table tr:hover {
            background-color: #f1f1f1;
        }

        /* Phong cách các liên kết hành động (Edit, Details, Delete) */
        .table td a {
            color: #007bff;
            text-decoration: none;
            margin: 0 5px;
            font-weight: bold;
        }

            .table td a:hover {
                color: #0056b3;
                text-decoration: underline;
            }

            /* Phong cách riêng cho liên kết "Delete" */
            .table td a.delete-link {
                color: #d9534f;
            }

                .table td a.delete-link:hover {
                    color: #c9302c;
                    text-decoration: underline;
                }

</style>
