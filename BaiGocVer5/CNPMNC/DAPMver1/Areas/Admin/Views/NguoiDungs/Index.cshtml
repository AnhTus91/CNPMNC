@model IEnumerable<DAPMver1.Data.NguoiDung>

@{
    ViewData["Title"] = "Index";
}

<h1>Danh sách người dùng</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Tên Người Dùng
            </th>
            <th>
            </th>
            <th>
                Số Điện Thoại
            </th>
            <th>
                Ảnh Đại Diện
            </th>
            <th>
            </th>
            <th>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TenNguoiDung)
                </td>
                <td>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sdt)
                </td>
                <td>
                   <img src="@item.AnhDaiDien" width="100"/>
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.MaNguoiDung" class="btn btn-info">Chi tiết</a>
                </td>
                <td>
                    @if (item.MaTaiKhoanNavigation != null)
                    {
                        <form asp-action="ChangeStatus" asp-route-id="@item.MaNguoiDung" method="post">
                            <button type="submit" class="btn @(item.MaTaiKhoanNavigation.VaiTro ? "btn-warning" : "btn-danger")">
                                @(item.MaTaiKhoanNavigation.VaiTro ? "Mở khóa" : "Vô hiệu hóa")
                            </button>
                        </form>
                    }
                </td>

            </tr>
        }
    </tbody>
</table>
