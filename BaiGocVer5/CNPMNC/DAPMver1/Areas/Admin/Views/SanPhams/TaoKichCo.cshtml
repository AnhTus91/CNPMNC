@model DAPMver1.Data.KichCo

@{
    ViewData["Title"] = "Create Size";
}

<h2>Create Size</h2>


@* Hiển thị thông báo lỗi toàn cục nếu có *@
@foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
{
    <div class="alert alert-danger">
        @error.ErrorMessage
    </div>
}
<form asp-action="TaoKichCo" method="post">
    <div class="form-group">
        <label asp-for="MaSanPham" class="control-label">Product</label>
        <select asp-for="MaSanPham" class="form-control" asp-items="@(new SelectList(ViewBag.SanPhams, "MaSanPham", "TenSanPham"))">
            <option value="">-- Select a Product --</option>
        </select>
        <span asp-validation-for="MaSanPham" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SoKichCo" class="control-label">Size</label>
        <input asp-for="SoKichCo" class="form-control" />
        <span asp-validation-for="SoKichCo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SoLuong" class="control-label">Quantity</label>
        <input asp-for="SoLuong" class="form-control" />
        <span asp-validation-for="SoLuong" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>


<div>
    <a asp-action="Index">Back to List</a>
</div>