@model IEnumerable<DAPMver1.Data.Voucher>

@{
    ViewData["Title"] = "Index";
}
<style>
    h1 {
        font-weight: bold;
        color: #333;
    }

    .table {
        border-radius: 10px;
        overflow: hidden;
    }

        .table th, .table td {
            vertical-align: middle;
        }

    .btn-lg {
        padding: 12px 20px;
        font-size: 1.2rem;
        font-weight: bold;
    }

    .btn-sm {
        width: 80px;
        font-size: 0.9rem;
    }

    .badge {
        font-size: 0.9rem;
        padding: 8px;
        border-radius: 5px;
    }

</style>
<h1 class="text-center my-4">Danh Sách Voucher</h1>

<p class="text-end">
    <a asp-action="Create" class="btn btn-success btn-lg">
        Tạo Voucher Mới
    </a>
</p>

<table class="table table-hover table-striped table-bordered shadow-sm">
    <thead class="table-dark text-center">
        <tr>
            <th>Tên Voucher</th>
            <th>Giá Trị (VND)</th>
            <th>Thời Gian Bắt Đầu</th>
            <th>Thời Gian Kết Thúc</th>
            <th>Trạng Thái</th>
            <th>Điều Kiện Áp Dụng (VND)</th>
            <th>Số Lượng</th>
            <th>Hành Động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="text-center align-middle">
                <td>@item.TenVoucher</td>
                <td>@item.GiaTri</td>
                <td>@item.ThoiGianBatDau.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@item.ThoiGianKetThuc.ToString("dd/MM/yyyy HH:mm")</td>
                <td>
                    <span class="badge @(item.TrangThai ? "bg-success" : "bg-danger")">
                        @(item.TrangThai ? "Kích Hoạt" : "Không Kích Hoạt")
                    </span>
                </td>
                <td>@item.DieuKienApDung</td>
                <td>@item.SoLuong</td>
                <td>
                    <div class="d-flex justify-content-center gap-2">
                        <a asp-action="Edit" asp-route-id="@item.MaVoucher" class="btn btn-warning btn-sm">
                            Sửa
                        </a>
                        <a asp-action="Details" asp-route-id="@item.MaVoucher" class="btn btn-info btn-sm">
                            Xem
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.MaVoucher" class="btn btn-danger btn-sm">
                            Xóa
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>