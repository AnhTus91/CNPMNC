@model DAPMver1.Data.Voucher

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-center my-4">Chỉnh Sửa Voucher</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit" class="p-4 border rounded shadow-sm bg-light">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input type="hidden" asp-for="MaVoucher" />

                <div class="mb-3">
                    <label asp-for="TenVoucher" class="form-label">Tên Voucher</label>
                    <input asp-for="TenVoucher" class="form-control" />
                    <span asp-validation-for="TenVoucher" class="text-danger"></span>
                </div>


                <div class="mb-3">
                    <label asp-for="GiaTri" class="form-label">Giá Trị</label>
                    <input asp-for="GiaTri" type="number" class="form-control" min="1" />
                    <span asp-validation-for="GiaTri" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ThoiGianBatDau" class="form-label">Thời Gian Bắt Đầu</label>
                    <input asp-for="ThoiGianBatDau" type="datetime-local" class="form-control" />
                    <span asp-validation-for="ThoiGianBatDau" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ThoiGianKetThuc" class="form-label">Thời Gian Kết Thúc</label>
                    <input asp-for="ThoiGianKetThuc" type="datetime-local" class="form-control" />
                    <span asp-validation-for="ThoiGianKetThuc" class="text-danger"></span>
                </div>

                <div class="form-group form-check mb-3">
                    <input class="form-check-input" asp-for="TrangThai" />
                    <label asp-for="TrangThai" class="form-check-label ms-2">Kích Hoạt</label>
                </div>

                <div class="mb-3">
                    <label asp-for="NgayTao" class="form-label">Ngày Tạo</label>
                    <input asp-for="NgayTao" type="datetime-local" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="DieuKienApDung" class="form-label">Điều Kiện Áp Dụng</label>
                    <input asp-for="DieuKienApDung" type="number" class="form-control" min="1" />
                    <span asp-validation-for="DieuKienApDung" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="SoLuong" class="form-label">Số Lượng</label>
                    <input asp-for="SoLuong" type="number" class="form-control" min="1" />
                    <span asp-validation-for="SoLuong" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">Quay Lại</a>
                    <button type="submit" class="btn btn-primary" style="background-color: cornflowerblue;">Lưu Thay Đổi</button>
                </div>
            </form>
        </div>
    </div>
</div>
